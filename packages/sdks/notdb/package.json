{
  "name": "paperdb",
  "version": "2.0.0",
  "description": "PaperDB - The frontend-first database for modern web apps",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "browser": "./dist/browser.global.js",
  "unpkg": "./dist/browser.global.js",
  "jsdelivr": "./dist/browser.global.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./browser": {
      "import": "./dist/browser.global.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev-run": "clear && pnpm run build && node dist/index.js",
    "typecheck": "tsc --noEmit",
    "publish": "pnpm run build && npm publish --access public"
  },
  "keywords": [
    "database",
    "baas",
    "backend",
    "firebase",
    "supabase",
    "realtime",
    "crud",
    "auth",
    "storage",
    "webhooks",
    "cron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "typescript": "^5.8.3"
  }
}
